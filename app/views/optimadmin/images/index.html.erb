<%= render 'optimadmin/shared/header/main_title', title: 'Stored Images' %>

<div class="main-content">

  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Image', object: Optimadmin::Image, path: new_image_path %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <%= render 'optimadmin/shared/module/index/order', options: [['A-Z', 'name ASC'], ['Z-A', 'name DESC'], ['Newest first', 'created_at DESC'], ['Oldest first', 'created_at ASC']] %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-5 small-4' do 'Name' end %>

    <%= list_item 'large-2 hide-for-medium-down' do 'Preview' end %>

    <%= list_item 'large-2 hide-for-small' do 'Size' end %>

    <%= list_item { 'View' } %>
    <%= list_item { 'Edit' } %>

    <%= list_item 'large-1 hide-for-medium-down text-center last' do 'Delete' end %>
  </div>

  <%= render_object @images %>

  <%= paginate @images %>
</div>
