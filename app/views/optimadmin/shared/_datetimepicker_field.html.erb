<div class="datetimepicker-field">
  <%= f.label date %>
  <% if f.object.new_record? || (f.object.send(date).blank? && required?(f.object, date)) %>
    <%= f.text_field date, class: 'datetimepicker', value: "#{Time.zone.now.strftime("%d-%m-%Y %H:%M")}" %>
  <% elsif f.object.send(date).present? %>
    <%= f.text_field date, class: 'datetimepicker', value: "#{f.object.send(date).to_datetime.strftime("%d-%m-%Y %H:%M")}" %>
  <% else %>
    <%= f.text_field date, class: 'datetimepicker' %>
  <% end %>
</div>
