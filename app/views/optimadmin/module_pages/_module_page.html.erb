<div class="row collapse module-list-index <%= cycle('odd', 'even') %>" data-equalizer="module-list" id="item_<%= module_page.id %>">
  <div class="large-5 small-5 columns" data-equalizer-watch="module-list">
    <%= module_page.name %>
  </div>

  <div class="large-5 small-5 columns" data-equalizer-watch="module-list">
    <%= module_page.route %>
  </div>

  <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
    <%= edit_link(object: module_page) %>
  </div>

  <div class="large-1 hide-for-medium-down columns last" data-equalizer-watch="module-list">
    <%= destroy_link(object: module_page) %>
  </div>
</div>
